<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/system_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到系统位置设置"/>

        <Button
            android:id="@+id/system_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到系统设置"/>

        <Button
            android:id="@+id/system_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到App管理"/>

        <Button
            android:id="@+id/system_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到显示设置"/>

        <Button
            android:id="@+id/system_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到声音设置"/>

        <Button
            android:id="@+id/system_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到日期设置"/>

        <Button
            android:id="@+id/system_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到同步设置"/>

        <Button
            android:id="@+id/system_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="跳转到输入设置"/>

        <Button
            android:id="@+id/system_flash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启闪光灯"/>

        <Button
            android:id="@+id/system_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="锁屏"/>

        <Button
            android:id="@+id/system_reboot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重启"/>

        <Button
            android:id="@+id/system_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关机"/>

        <Button
            android:id="@+id/system_notifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通知管理"/>

    </LinearLayout>
</ScrollView>
